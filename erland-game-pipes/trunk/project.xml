<?xml version="1.0" encoding="ISO-8859-1"?>
<project>

  <!-- the version of maven's project object model -->
  <pomVersion>3</pomVersion>
  
  <!-- a unique name for this project -->
  <groupId>erland</groupId>
  <id>erland-game-pipes</id>
  
  <!-- a short but descriptive name for the project -->
  <name>Pipes</name>
  
  <!-- The version of the project under development, e.g.
       1.1, 1.2, 2.0-SNAPSHOT -->
  <currentVersion>1.0.1</currentVersion>
  
  <organization>
        <name>Erland Isaksson</name>
        <url>http://erland.homeip.net</url>
  </organization>

  <!-- the year the project started -->
  <inceptionYear>2003</inceptionYear>
  <package>erland.game.pipes</package>
  <description>
    A game where the idea is to build pipes so the water does not leak
  </description>
  <!-- a short description of what the project does -->
  <shortDescription>
    A game where the idea is to build pipes
  </shortDescription>
  <url>http://erland.homeip.net/games/applications</url>
  <siteDirectory>\\xp2500\erland/public_html/java/erland-game-pipes</siteDirectory>
  <!-- any mailing lists for the project -->
  <mailingLists/>
  
  <!-- who the developers are for the project -->
  <developers>
  	<developer>
	  	<name>Erland Isaksson</name>
	  	<email>erland.i@telia.com</email>
	  	<url>http://erland.homeip.net</url>
	</developer>
  </developers>

  <!-- jar files the project is dependent on -->
  <dependencies>
	<dependency>
      <url>http://erland.homeip.net</url>
      <groupId>erland</groupId>
      <artifactId>erland-util</artifactId>
      <version>1.3.1</version>
      <type>jar</type>
	  <properties>
        <jnlp.jar>true</jnlp.jar>
        <dist.bin.bundle>true</dist.bin.bundle>
        <jar.manifest.classpath>true</jar.manifest.classpath>
      </properties>
    </dependency>

	<dependency>
      <url>http://erland.homeip.net</url>
      <groupId>erland</groupId>
      <artifactId>erland-game</artifactId>
      <version>1.1.1</version>
      <type>jar</type>
	  <properties>
        <jnlp.jar>true</jnlp.jar>
        <dist.bin.bundle>true</dist.bin.bundle>
        <jar.manifest.classpath>true</jar.manifest.classpath>
      </properties>
    </dependency>
    <dependency>
        <url>http://jakarta.apache.org/commons/logging</url>
        <groupId>commons-logging</groupId>
        <artifactId>commons-logging</artifactId>
        <version>1.0.4</version>
        <type>jar</type>
        <properties>
            <jnlp.jar>true</jnlp.jar>
            <dist.bin.bundle>true</dist.bin.bundle>
            <jar.manifest.classpath>true</jar.manifest.classpath>
        </properties>
    </dependency>
  </dependencies>
  
  <!-- build information for the project -->
  <build>
    <nagEmailAddress>erland.i@telia.com</nagEmailAddress>
    <sourceDirectory>src</sourceDirectory>
    <resources>
        <resource>
            <directory>${basedir}/src</directory>
            <includes>
                <include>**/*.xml</include>
                <include>**/*.properties</include>
            </includes>
        </resource>
        <resource>
            <directory>${basedir}</directory>
            <includes>
                <include>images/**/*.gif</include>
            </includes>
        </resource>
    </resources>
  </build>
  <reports>
      <report>maven-javadoc-plugin</report>
      <report>maven-license-plugin</report>
 </reports>
</project>

