<entity id="useraccount">
    <class>erland.webapp.gallery.entity.account.UserAccount</class>
    <data id="storage">
        <class>erland.webapp.common.GenericEntityStorage</class>
        <name>sql</name>
    </data>
    <data id="sql">
        <datasource>jdbc/gallery</datasource>
        <table>useraccounts</table>
        <fields>
            <field id="username">
                <column>username</column>
                <type>String</type>
                <identity>true</identity>
            </field>
            <field id="title">
                <column>title</column>
                <type>String</type>
            </field>
            <field id="titleEnglish">
                <column>title_en</column>
                <type>String</type>
            </field>
            <field id="welcomeText">
                <column>welcometext</column>
                <type>String</type>
            </field>
            <field id="welcomeTextEnglish">
                <column>welcometext_en</column>
                <type>String</type>
            </field>
            <field id="description">
                <column>description</column>
                <type>String</type>
            </field>
            <field id="descriptionEnglish">
                <column>description_en</column>
                <type>String</type>
            </field>
            <field id="logo">
                <column>logo</column>
                <type>String</type>
            </field>
            <field id="defaultGallery">
                <column>defaultGallery</column>
                <type>Integer</type>
            </field>
            <field id="official">
                <column>official</column>
                <type>Boolean</type>
            </field>
            <field id="copyrightText">
                <column>copyright</column>
                <type>String</type>
            </field>
            <field id="stylesheet">
                <column>stylesheet</column>
                <type>String</type>
            </field>
            <field id="skin">
                <column>skin</column>
                <type>String</type>
            </field>
        </fields>
        <queries>
            <query id="all">
                <querystring/>
            </query>
            <query id="allofficial">
                <querystring>official=1</querystring>
            </query>
        </queries>
    </data>
</entity>
