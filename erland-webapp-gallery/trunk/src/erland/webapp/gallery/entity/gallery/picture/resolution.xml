<entity id="resolution">
    <class>erland.webapp.gallery.entity.gallery.picture.Resolution</class>
    <data id="storage">
        <class>erland.webapp.common.GenericEntityStorage</class>
        <name>sql</name>
    </data>
    <data id="sql">
        <datasource>jdbc/gallery</datasource>
        <table>resolutions</table>
        <fields>
            <field id="id">
                <column>id</column>
                <type>String</type>
                <identity>true</identity>
            </field>
            <field id="description">
                <column>description</column>
                <type>String</type>
            </field>
            <field id="width">
                <column>width</column>
                <type>Integer</type>
            </field>
        </fields>
        <queries>
            <query id="all">
                <querystring/>
                <orderstring>order by width asc</orderstring>
            </query>
        </queries>
    </data>
</entity>
