<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.0//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_0.dtd">

<form-validation>
    <formset>
        <form name="userAccountFB">
            <field property="welcomeText" depends="required">
                <arg0 key="gallery.account.edit.welcometext"/>
            </field>
            <field property="description" depends="required">
                <arg0 key="gallery.account.edit.description"/>
            </field>
        </form>
        <form name="newUserAccountFB">
            <field property="username" depends="required">
                <arg0 key="gallery.account.new.username"/>
            </field>
            <field property="firstName" depends="required">
                <arg0 key="gallery.account.new.firstname"/>
            </field>
            <field property="lastName" depends="required">
                <arg0 key="gallery.account.new.lastname"/>
            </field>
            <field property="password1" depends="required">
                <arg0 key="gallery.account.new.password1"/>
            </field>
            <field property="password2" depends="required">
                <arg0 key="gallery.account.new.password2"/>
            </field>
            <field property="welcomeText" depends="required">
                <arg0 key="gallery.account.new.welcometext"/>
            </field>
            <field property="description" depends="required">
                <arg0 key="gallery.account.new.description"/>
            </field>
        </form>
        <form name="storageFB">
            <field property="name">
                <arg0 key="gallery.storage.edit.name"/>
            </field>
            <field property="path">
                <arg0 key="gallery.storage.edit.path"/>
            </field>
        </form>
        <form name="guestAccountFB">
            <field property="guestUser">
                <arg0 key="gallery.guestaccount.edit.username"/>
            </field>
        </form>
    </formset>
</form-validation>